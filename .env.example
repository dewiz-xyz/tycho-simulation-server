# Tycho API settings
TYCHO_URL=tycho-beta.propellerheads.xyz
TYCHO_API_KEY=your_api_key_here
# TVL thresholds are denominated in the chain's native token
TVL_THRESHOLD=100
# Optional: ratio for keep/remove threshold (remove = TVL_THRESHOLD * TVL_KEEP_RATIO)
TVL_KEEP_RATIO=0.2

# Server settings
PORT=3000
HOST=127.0.0.1

# Logging settings
RUST_LOG=info

# Quote & simulation timeouts (milliseconds)
# Max total time a quote can run before canceling outstanding pool sims
QUOTE_TIMEOUT_MS=150
# Per-pool watchdogs; native and VM can be tuned independently
POOL_TIMEOUT_NATIVE_MS=20
POOL_TIMEOUT_VM_MS=150
# Request-level guard applied at handler; router adds +250ms headroom
REQUEST_TIMEOUT_MS=4000
# Timeout for single-token refresh fallback when cache misses occur
TOKEN_REFRESH_TIMEOUT_MS=1000

# Simulation concurrency caps (global)
# Defaults: native = 4 * num_cpus (clamped to 256), vm = 2 * num_cpus (clamped to 256)
# GLOBAL_NATIVE_SIM_CONCURRENCY=
# GLOBAL_VM_SIM_CONCURRENCY=

# VM pool feeds (default false)
ENABLE_VM_POOLS=false

# Tenderly simulation (dev-only)
# RPC URL for slot discovery when setting Tenderly state overrides
# RPC_URL=
# TENDERLY_ACCOUNT_SLUG=
# TENDERLY_PROJECT_SLUG=
# TENDERLY_ACCESS_KEY=
# TENDERLY_SIMULATION_TYPE=full
# TENDERLY_SIMULATION_GAS=8000000
